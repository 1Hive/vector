{
  "name": "@connext/isomorphic-node",
  "version": "0.0.1",
  "description": "Typescript + Clean architecture used as scaffolding",
  "main": "app.ts",
  "scripts": {
    "build": "npm run compile:ts",
    "compile:ts": "rm -rf build/ && tsc -p .",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "start:api": "npm run compile:ts && node build/frameworks/api/index.js",
    "start:script": "npm run compile:ts && node build/frameworks/script/index.js",
    "test": "ts-mocha -p ./tsconfig.json src/**/*.spec.ts"
  },
  "keywords": [
    "Typescript",
    "Clean Architecture",
    "Node"
  ],
  "author": "Connext & Friends",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@types/chai": "4.2.12",
    "@types/chai-as-promised": "7.1.3",
    "@types/express": "4.17.8",
    "@types/glob": "7.1.3",
    "@types/joi": "14.3.4",
    "@types/lodash": "4.14.161",
    "@types/mocha": "8.0.3",
    "@types/node": "14.6.4",
    "@types/sinon": "9.0.5",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "mocha": "8.1.3",
    "prettier": "2.1.1",
    "sinon": "9.0.3",
    "ts-mocha": "7.0.0",
    "ts-node": "9.0.0",
    "typedoc": "0.19.1",
    "typescript": "4.0.2"
  },
  "dependencies": {
    "@connext/vector-engine": "0.0.1",
    "awilix": "4.2.6",
    "body-parser": "1.19.0",
    "ethers": "5.0.12",
    "express": "4.17.1",
    "joi": "17.2.1",
    "ts-nats": "1.2.15"
  }
}
