{
  "compilerOptions": {
    "baseUrl": "./",
    "incremental": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "strict": true,
    "target": "es6",
    "declarationDir": "dist/",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/*.ts", "src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "test-environment.ts", "test/*.ts"]
}
